<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow
            android:background="#FFFFFF">
            <TextView
                android:id="@+id/agent"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="배송대행지"
                android:layout_gravity="center_horizontal"
                android:gravity="center"/>
        </TableRow>
        <TableRow
            android:background="#FFFFFF">
            <TextView
                android:id="@+id/shippingCenter"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:text=""
                android:textSize="10dp"
                android:layout_gravity="center_horizontal"/>
        </TableRow>
    </TableLayout>
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TableRow>
            <ImageView
                android:id="@+id/shipGubunImg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/if_airport_1"
                android:layout_gravity="center"/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/shipGubun"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text=""
                android:textSize="10dp"
                android:layout_gravity="center_horizontal"/>
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shrinkColumns="*"
        android:stretchColumns="1,3"
        android:layout_margin="2dp"
        android:padding="4dp"
        >

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="부피무게:"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/volumeWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text=""
                android:textSize="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="국제배송비:"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/shppingCharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text=""
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="10dp" />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="적용무게:"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/applyWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text=""
                android:textColor="@color/colorPrimaryDark"
                android:textSize="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="국내배송비:"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/localShipCharge"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left"
                android:text=""
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="10dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/note"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_span="4"
                android:gravity="left"
                android:text="note"
                android:textSize="10dp" />
        </TableRow>
    </TableLayout>
</LinearLayout>